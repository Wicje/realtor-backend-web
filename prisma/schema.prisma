generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  REALTOR
}

enum Plan {
  FREE
  BASIC
  PRO
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  role         Role
  plan         Plan
  createdAt    DateTime   @default(now())
slug      String   @unique  
  properties   Property[]
}


model Property {
  id          String   @id @default(uuid())
  title       String
  description String
  type        PropertyType
  size        String
  furnished   Boolean
  price       Int
  priceMode   PriceMode
  state       String
  city        String
  street      String
  images      String[] // array of URLs
  visitors    Int      @default(0)
  totalLeads  Int      @default(0)
  createdAt   DateTime @default(now())

  realtor     User     @relation(fields: [realtorId], references: [id])
  realtorId   String
 visibility    PropertyVisibility[]
}

enum PropertyType {
  SHOP
  RESIDENTIAL
  WAREHOUSE
  DUPLEX
  BUNGALOW
  LAND
}

enum PriceMode {
  RENT
  LEASE
  ONE_TIME
}

model Lead {
  id              String   @id @default(uuid())
  phone           String
  message         String
  isPhoneVerified Boolean  @default(false)

  realtorId       String
  propertyId      String

  realtor         User     @relation(fields: [realtorId], references: [id])
  property        Property @relation(fields: [propertyId], references: [id])

  createdAt       DateTime @default(now())
}


model AnalyticsEvent {
  id         String   @id @default(uuid())
  type       String

  realtorId  String
  propertyId String?

  realtor    User     @relation(fields: [realtorId], references: [id])
  property   Property? @relation(fields: [propertyId], references: [id])

  createdAt  DateTime @default(now())
}


model PropertyVisibility {
  id          String   @id @default(uuid())
  propertyId  String
  phone       String   // client phone number

  property    Property @relation(fields: [propertyId], references: [id])

  @@unique([propertyId, phone])
}


model Conversation {
  id           String    @id @default(uuid())
  propertyId   String
  realtorId    String
  clientPhone  String
  createdAt    DateTime  @default(now())

  property     Property  @relation(fields: [propertyId], references: [id])
  realtor      Realtor   @relation(fields: [realtorId], references: [id])
  messages     Message[]

  @@unique([propertyId, clientPhone])
}

model Message {
  id             String        @id @default(uuid())
  conversationId String
  senderType     SenderType
  content        String
  createdAt      DateTime      @default(now())

  conversation   Conversation  @relation(fields: [conversationId], references: [id])
}

enum SenderType {
  REALTOR
  CLIENT
}
